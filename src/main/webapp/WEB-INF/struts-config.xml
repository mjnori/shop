<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.0//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_0.dtd">
<struts-config>
    <form-beans>
        <form-bean name="myLoginForm"
                   type="com.example.testt.forms.LoginForm"/>
    </form-beans>
    <action-mappings>
                <action path="/login"
                        type="com.example.testt.actions.HelloServletAction"
                        parameter="method"
                        scope="request"
                        validate="false"
                        name="myLoginForm">

        <forward name="show" path="/login.jsp"/>
        <forward name="wellcome" path="/wellcome.jsp"/>
    </action>

    </action-mappings>
</struts-config>